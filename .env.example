# ENVIRONMENT
#--------------------------------------------------------------------

# development, testing, production
CI_ENVIRONMENT = development

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------

# Site URL - SONUNDA / OLMALI
app.baseURL = 'http://localhost:8080/'

# App Timezone
# app.timezone = 'Europe/Berlin'

# Default Locale
# app.locale = 'tr'

# Supported Locales
# app.supportedLocales = ['de', 'en', 'tr']

#--------------------------------------------------------------------
# DATABASE
#--------------------------------------------------------------------

# Default: SQLite (shared hosting icin ideal)
# database.default.database = '../writable/database/app.sqlite'
# database.default.DBDriver = 'SQLite3'

# MySQL kullanmak icin asagidaki satirlari acin:
# database.default.hostname = localhost
# database.default.database = your_database
