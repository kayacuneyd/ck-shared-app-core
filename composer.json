{
    "name": "ck/shared-app-core",
    "description": "CK Shared App Core - CodeIgniter 4 based modular web application",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "codeigniter4/framework": "^4.4",
        "codeigniter4/appstarter": "^4.6"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "App\\Modules\\": "app/Modules/",
            "Config\\": "app/Config/"
        },
        "files": [
            "app/Modules/Property/Helpers/property_helper.php"
        ],
        "exclude-from-classmap": [
            "vendor/codeigniter4/appstarter/app/"
        ]
    },
    "scripts": {
        "post-update-cmd": [
            "@composer dump-autoload"
        ],
        "serve": "php spark serve",
        "migrate": "php spark migrate --all",
        "seed:admin": "php spark db:seed AdminSeeder",
        "seed:property": "php spark db:seed \"App\\\\Modules\\\\Property\\\\Database\\\\Seeds\\\\PropertySeeder\"",
        "routes": "php spark routes",
        "cache:clear": "php spark cache:clear",
        "release": "php scripts/build-release.php"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
